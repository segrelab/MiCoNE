// -*- mode: groovy -*-

params {
    network_inference {
        bootstrap {
            'resample' {
                bootstraps = 1000
                ncpus = 1
            }
            'pvalue' {
                ncpus = 1
            }
        }
        correlation {
            selection = ['sparcc', 'pearson', 'spearman', 'propr']
            'sparcc' {
                iterations = 50
                ncpus = 1
            }
            'pearson' {
                ncpus = 1
            }
            'spearman' {
                ncpus = 1
            }
            'propr' {
                ncpus = 1
            }
        }
        direct {
            selection = ['spieceasi', 'flashweave', 'mldm']
            'spieceasi' {
                method = "mb"
                ncpus = 1
                nreps = 50
                nlambda = 20
                lambda_min_ratio = 1e-2
            }
            'flashweave' {
                ncpus = 1
                sensitive = "true"
                heterogeneous = "false"
                fdr_correction = "true"
            }
            'mldm' {
                Z_mean = 1
                max_iteration = 1500
            }
        }
        network {
            'make_network_with_pvalue' {
                interaction_threshold = 0.3
                pvalue_threshold = 0.05
                // FIXME: This should ideally be passed through the sample_sheet
                metadata_file = ""
            }
            'make_network_without_pvalue' {
                interaction_threshold = 0.3
                // FIXME: This should ideally be passed through the sample_sheet
                metadata_file = ""
            }
        }
    }
}
